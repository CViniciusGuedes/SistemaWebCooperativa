<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebCoop</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SistemaWebCooperativa.styles.css" asp-append-version="true" />
</head>
<body class="bg-success bg-opacity-30">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-warning border-bottom box-shadow mb-3">

            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">WebCoop</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">     
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Inicio</a>
                        </li>
                        <li class="nav-item dropdown">                 
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Menu Opções
                            </a>
                            <ul class="dropdown-menu">
                                <li> <a class="dropdown-item" asp-area="" asp-controller="Propriedades" asp-action="Index">Propriedades</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="Producoes" asp-action="Index">Produções</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="Produtos" asp-action="Index">Produtos</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="Cooperados" asp-action="Index">Cooperados</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="Transacoes" asp-action="Index">Transações</a></li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="start-50 position-absolute">
                <img src="\NewFolder2\coop.png" class="rounded float-end" alt="Cooperativa" height="57">
            </div>
            <partial name="_LoginPartial" />
        </nav>
        
    </header>

    <div class="container bg-opacity-65 mt-5 h-100">
        <main role="main" class="pb-3 bg-light p-5">
            @RenderBody()
        </main>
    </div>
    <br />
    <br />

    <footer class="border-top footer text-muted mt-5">
        <div class="text-center p-3" style="background-color: rgba(0, 0, 0, 0.2);">
            <a class="text-white">&copy; 2022 - SistemaWebCooperativa</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
